<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>		
		.error {			
			font-size:medium;
			font-weight: bold;
			color:red;
			text
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label text="Adj hozzá egy érdekes helyet te is!" horizontalAlignment="ALIGN_CENTER"/>
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" ui:field="wrapper">
			<g:HorizontalPanel>
				<g:Label text="Név " width="75px"/>
				<g:TextBox alignment="LEFT" ui:field="name"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
					<g:Label text="Honlap " width="75px"/>
					<g:TextBox ui:field="webpage"/>
				</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="Kép URL" width="75px"/>
				<g:TextBox ui:field="image"/>
			</g:HorizontalPanel>
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Label text="Leírás"/>
			</g:Cell>
			<g:TextArea width="230px" height="106px" ui:field="description"/>
			<g:HorizontalPanel>
				<g:Button width="46px" ui:field="sendButton">Ok</g:Button>
				<g:Button ui:field="cancelButton">Mégse</g:Button>
			</g:HorizontalPanel>
			<g:Label ui:field="errorLabel" text="" styleName="{style.error}" />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 