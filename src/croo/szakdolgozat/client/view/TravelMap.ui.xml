<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gm='urn:import:com.google.gwt.maps.client'>
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:TextBox ui:field="startField"/>			
			<g:TextBox ui:field="endField"/>			
			<g:Button styleName="{style.important}" ui:field="sendButton" />
		</g:HorizontalPanel>
		<gm:MapWidget ui:field="map" title="Utazz a MÁVval!" width="800px" height="600px" scrollWheelZoomEnabled="true" continuousZoom="true" zoomLevel="7" />
	</g:VerticalPanel>		
	</g:HTMLPanel>
</ui:UiBinder> 