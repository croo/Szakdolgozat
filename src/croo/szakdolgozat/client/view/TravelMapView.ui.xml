<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
	<g:VerticalPanel>
		
		<g:HorizontalPanel>
		<g:Label>Honnan: </g:Label>
			<g:TextBox ui:field="startTown"/>
		<g:Label>Hova: </g:Label>
			<g:TextBox ui:field="destinationTown"/>			
			<g:Button styleName="{style.important}" ui:field="sendButton" text="Mehet!" />
		</g:HorizontalPanel>
		
		<g:Label ui:field="errorLabel" text="" />
		
		<g:SimplePanel ui:field="mapHolder">
		</g:SimplePanel>
		
	</g:VerticalPanel>		
	</g:HTMLPanel>
</ui:UiBinder> 